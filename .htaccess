RewriteEngine On

# Rewrite feeds to Feedburner, except for feedburner itself.
RewriteCond %{HTTP_USER_AGENT} !FeedBurner
RewriteRule ^atom.xml$ http://feeds2.feedburner.com/avdgaag [R=301,L]

# Set up pretty error document pages
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html

# Protect this file
<Files .htaccess>
order deny,allow
deny from all
</Files>

# Rewrite old URLs to old site on subdomain
RewriteRule ^200(8|7|6|5|4).*$ http://old.arjanvandergaag.nl/$0 [L,R=301]