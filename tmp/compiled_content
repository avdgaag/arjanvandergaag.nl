body {
    background: #eee;
    text-align: center;
    font: 12px/20px Helvetica Neue, Helvetica, Arial, sans-serif;
    color: #444;
}

#cv {
    width: 720px;
    text-align: left;
    margin: 40px auto;
    background: #fff;
    padding: 40px 80px;
    border-top: 6px solid #666;
    border-bottom: 2px solid #666;
    -webkit-box-shadow: #ddd 2px 2px 10px;
}

div.section, div.header {
    margin: 20px 0;
    padding: 0 0 40px 200px;
}

div.section:after, div.header:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    height: 0;
}

div.header {
    padding-left: 0;
}

.column {
    float: left;
    margin-right: 20px;
}

.column.last {
    margin-right: 0;
}

