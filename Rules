#!/usr/bin/env ruby


# compile '/assets/*' do
#   # donâ€™t filter or layout
# end

compile %r{^/assets/(lib|styles)/} do
  filter :erb
  filter :concat
  filter :cache_buster
  filter :minify
end

compile %r{^/(google|sitemap|htaccess|cv|resume|404)} do
  filter :erb
  filter :cache_buster
end

compile '/assets/*' do
  # do nothing
end

compile '/blog/*' do
  @item[:body_class] = 'inside'
  filter :kramdown
  filter :code_swap
  filter :captions
  filter :typogruby
  filter :colorize_syntax
  layout 'blog_post'
  layout 'default'
  filter :cache_buster
end

compile '*' do
  filter :erb
  layout 'default' if item[:extension] == 'html'
  filter :cache_buster
end

route '/htaccess/' do
  '/.htaccess'
end

route '/' do
  '/index.html'
end

route %r{^/(assets/.*|sitemap|robots|atom)/$} do
  if CacheBusterFilter::EXTENSIONS.include?(item[:extension])
    item.identifier.chop + CacheBusterFilter.hash(item[:filename]) + '.' + item[:extension]
  else
    item.identifier.chop + '.' + item[:extension]
  end
end

route '*' do
  item.identifier.chop + '.html'
end

layout '*', :erb
