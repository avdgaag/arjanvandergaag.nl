#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

# compile '/assets/*' do
#   # don’t filter or layout
# end

compile %r{^/(google|htaccess|cv|resume|404|500|assets)} do
  # don't filter or layout
  filter :rainpress if item[:extension] == 'css'
end

compile '/blog/*' do
  @item[:body_class] = 'inside'
  filter :kramdown
  filter :code_swap
  filter :typogruby
  filter :colorize_syntax
  layout 'blog_post'
  layout 'default'
end

compile '/sitemap/' do
  filter :erb
  filter :clean_sitemap
end

compile '*' do
  filter :erb
  layout 'default' if item[:extension] == 'html'
end

route '/htaccess/' do
  '/.htaccess'
end

route %r{^/(assets/.*|sitemap|robots|atom)/$} do
  item.identifier.chop + '.' + item[:extension]
end

route '/' do
  '/index.html'
end

route '*' do
  item.identifier.chop + '.html'
end

layout '*', :erb
