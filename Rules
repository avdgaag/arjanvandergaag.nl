#!/usr/bin/env ruby

preprocess do
  create_feed
  create_robots_txt
  create_webmaster_tools_authentications
  create_sitemap
end

compile %r{^/assets/(lib|styles)/} do
  filter :erb
  filter :concat
  filter :cache_buster
  filter :minify
end

compile %r{^/(google|sitemap|htaccess|cv|resume|404)} do
  filter :erb
  filter :cache_buster
end

compile '/assets/*' do
  # do nothing
end

compile '/blog/*' do
  @item[:body_class] = 'inside'
  filter :kramdown
  filter :code_swap
  filter :captions
  filter :typogruby
  filter :colorize_syntax
  layout 'blog_post'
  layout 'default'
  filter :cache_buster
end

compile '*' do
  filter :erb
  layout 'default' if item[:extension] == 'html'
  filter :cache_buster
end

route '/htaccess/' do
  '/.htaccess'
end

route '/' do
  '/index.html'
end

route %r{^/(assets/.*|sitemap|robots|atom)/$} do
  cb = cachebust?(item) ? fingerprint(item[:filename]) : ''
  item.identifier.chop + cb + '.' + item[:extension]
end

route '*' do
  item.identifier.chop + '.html'
end

layout '*', :erb
