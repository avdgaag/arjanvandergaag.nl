#!/usr/bin/env ruby

preprocess do
  @items.each do |item|
    item[:created_at] = Time.parse(item[:created_at]) if item[:created_at]
  end
  @items.find_all('/ulysses/**/*').each do |item|
    item[:created_at] = item[:mtime]
    item[:title] = Nokogiri(item.raw_content).children.first.text
    item[:kind] = 'article'
    item[:tags] = item[:keywords]
    item[:use_parts] = true
  end
  @items.create('', { reviews: @items.find_all('/goodreads/*') }, '/books')
end

ignore '/goodreads/*'

compile '/books' do
  layout '/books.*'
  layout '/default.*'
  write item.identifier.without_ext + '.html'
end

compile '/styles.scss' do
  filter :tailwind
  snapshot :compiled
  filter :gzip
end

route '/styles.scss', snapshot: :compiled do
  item.identifier.without_ext + '.css'
end

route '/styles.scss', snapshot: :last do
  item.identifier.without_ext + '.css.gz'
end

compile '/feed.xml.erb' do
  filter :erb
  write '/feed.xml'
end

compile '/index.html.erb' do
  filter :erb
  filter :typogruby
  layout '/default.*'
  write '/index.html'
end

compile '/**/*.md' do
  filter :kramdown, {
    auto_id_prefix: '_',
    syntax_highlighter: 'rouge',
    syntax_highlighter_opts: {
      line_numbers: false,
      wrap: true
    }
  }
  layout '/article.*'
  filter :typogruby
  layout '/default.*'
  write ext: 'html'
end

compile '/ulysses/**/*' do
  filter :drop_empty_paragraphs
  layout '/article.*'
  filter :typogruby
  filter :colorize_syntax, default_colorizer: :rouge
  layout '/default.*'
  write('/blog/' + item.identifier.without_exts.split('/').drop(2).join('/') + '.html')
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :erb
